/**index.wxss**/
page {
	height: 100%;
	background-color: rgba(77,47,33,.8);
}
.container {
	box-sizing: border-box;
	padding-top: 200rpx;
}
.layout {
	width: 650rpx;
	height: 700rpx;
	margin: 0 auto ;
	background-color: #fff;
	border-radius: 6px;
	display: flex;
	flex-direction: column;
	box-shadow: 0 8rpx rgba(0,0,0,.2);
}
.layout .username {
	box-sizing: border-box;
	height: 100rpx;
	padding: 10rpx 20rpx;
	font-family: "Microsoft Himalaya";
	font-weight: 700;
	line-height: 100rpx;
}
.layout .content {
	flex: 1;
	font-size: 13px;
	padding: 0 20rpx;
	letter-spacing: 1px;
	line-height: 25px;
	font-family: "Microsoft YaHei";
}
.layout .comeOn {
	height: 100rpx;
	line-height: 100rpx;
}
.comeOn image {
	float: right;
	vertical-align: top;
	height: 50rpx;
	width: 50rpx;
	padding: 22rpx;
}
.comeOn text {
	float: right;
	margin-right: 30rpx;
}