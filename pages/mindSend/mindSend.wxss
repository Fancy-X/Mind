/**index.wxss**/
page {
	overflow: hidden;
	height: 100%;
	background-color: #e7e7e7;
}
.container {
	height: 100%;
}
.layout {
	height: 80%;
	display: flex;
	flex-direction: column;
	padding: 20rpx;
}
.layout .mindContent {
	flex: 1;
	width: 100%;
	font-size: 30rpx;
	letter-spacing: 3rpx;
}
.layout .username {
	letter-spacing: 3rpx;
	font-size: 30rpx;
	height: 100rpx;
	border-top: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
}
.layout .sendBtn {
	height: 100rpx;
}
.sendBtn button {
	float: right;
	height: 70rpx;
	width: 100rpx;
	margin-top: 26rpx;
	font-size: 30rpx;
	text-align: center;
	line-height: 70rpx;
	padding: 0;
}
